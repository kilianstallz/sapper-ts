{
  "name": "sapper-ts",
  "description": "sapper-ts",
  "version": "0.1.2",
  "scripts": {
    "dev": "run-p start:dev watch:css",
    "start:dev": "sapper dev",
    "build": "npm run build:css && sapper build --legacy",
    "export": "sapper export --legacy",
    "start": "node __sapper__/build",
    "watch:css": "postcss static/global.css -o static/index.css -w",
    "build:css": "NODE_ENV=production postcss static/global.css -o static/index.css",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "commit": "git-cz",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node scripts/verify-commit-msg.js"
    }
  },
  "dependencies": {
    "compression": "^1.7.1",
    "express": "^4.17.1",
    "sirv": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "@rollup/plugin-typescript": "^5.0.2",
    "@storybook/addon-actions": "^6.0.1",
    "@storybook/addon-essentials": "^6.0.1",
    "@storybook/addon-links": "^6.0.1",
    "@storybook/svelte": "^6.0.1",
    "@tsconfig/svelte": "^1.0.8",
    "@types/express": "^4.17.7",
    "@types/node": "^14.0.27",
    "babel-loader": "^8.1.0",
    "chalk": "^4.1.0",
    "conventional-changelog": "^3.1.21",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "postcss-load-config": "^2.1.0",
    "postcss-nested": "^4.2.3",
    "postcss-preset-env": "^6.7.0",
    "react-is": "^16.13.1",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^5.2.3",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.2",
    "sapper": "^0.28.0",
    "standard-version": "^8.0.2",
    "svelte": "^3.24.1",
    "svelte-loader": "^2.13.6",
    "svelte-preprocess": "^4.0.10",
    "tailwindcss": "^1.6.2",
    "typescript": "^3.9.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
